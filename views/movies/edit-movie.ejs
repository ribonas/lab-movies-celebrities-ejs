<h2>Edit Movie</h2>

<form action="/movies/<%= movie._id %>" method="post">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= movie.title %>">

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="<%= movie.genre %>">

  <label for="plot">Plot:</label>
  <input type="text" id="plot" name="plot" value="<%= movie.plot %>">

  <label for="cast">Cast:</label>
  <select multiple id="cast" name="cast">
    <% allCelebrities.forEach(function(celebrity) { %>
      <option value="<%= celebrity._id %>"
        <% if (movie.cast.includes(celebrity._id)) { %>
          selected
        <% } %>
      >
        <%= celebrity.name %>
      </option>
    <% }); %>
  </select>

  <button type="submit">Save Changes</button>
</form>
