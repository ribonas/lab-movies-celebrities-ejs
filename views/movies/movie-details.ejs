<h2>Movie Details</h2>

<p>Title: <%= movie.title %></p>
<p>Genre: <%= movie.genre %></p>
<p>Plot: <%= movie.plot %></p>

<h3>Cast:</h3>
<ul>
<% movie.cast.forEach(function(celebrity) { %>
  <li>Name: <%= celebrity.name %></li>
  <li>Occupation: <%= celebrity.occupation %></li>
  <li>Catchphrase: <%= celebrity.catchPhrase %></li>
<% }); %>
</ul>

<form action="/movies/<%= movie._id %>/delete" method="POST">
    <button type="submit">Delete Movie</button>
</form>